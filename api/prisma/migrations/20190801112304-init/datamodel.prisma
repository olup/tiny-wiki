datasource db {
  provider = "sqlite"
  url      = "file:../db/dev.db"
  default  = true
}

generator photon {
  provider = "photonjs"
}

generator nexus_prisma {
  provider = "nexus-prisma"
}

model User {
  id    String  @default(cuid()) @id @unique
  email String  @unique
  name  String?
  roles Role[]
}

model Role {
  id     String  @default(cuid()) @id @unique
  users  User[]
  slug   String  @unique
  locked Boolean
}


model Page {
  id         String  @default(cuid()) @id @unique
  title      String
  slug       String  @unique
  content    String?
  published  Boolean
  draftOwner User?
}